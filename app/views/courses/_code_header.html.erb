<header class="header-a">
  <div class="inner">
    <div class="logo">
      <a href="/">
      </div>
      <nav class="nav-a">
        <ul>
          <li class="courseslink">
            <%= link_to "Courses", courses_path %>
          </li>
          <% if user_signed_in?%>
          <li class="courseslink"><%= link_to "My Courses", courses_path %></li>
          <script>
          $('.courseslink').css('left',"-100px");
          </script>
          <ul id="dropdownlist">
            <li>
              <a href="#">
                <% if current_user.image == nil %>
                <%= gravatar_for_with_size current_user, "15x15" %>
                <% else  %>
                <%= image_tag(current_user.image,size: "23x26", alt: "")%> 
                <% end  %>
              </i>&nbsp;&nbsp;<%= current_user.name %>&nbsp;&nbsp;
              <i class="icon-arrow-down icon-white"></i></a>
              <ul>
                <% if current_user.has_role? :admin %>
                <li><%= link_to 'Admin', users_path %></li>
                <% end  %>
                <li><%= link_to "My Profile", edit_user_registration_path %></li>
                <li> <%= link_to "Log out", destroy_user_session_path, method: "delete" %></li>
              </ul>
            </li>
          </ul>
          <% else  %>
          <li class="loginlink"><a href="#loginmodal" role="button" data-toggle="modal" class="btn-c" >Log In</a></li>
          <li class="createaccountlink"><a href="#sign_up_Modal" role="button" data-toggle="modal" class="btn-a">Create Account</a></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>