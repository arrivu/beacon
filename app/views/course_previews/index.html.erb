<div style="float:left">
  <%= render 'shared/side_menu' %>
</div>
<div>
  <br>
  <div class="row">
    <div class="span12 offset3" style="min-height:250px;">

      <%- model_class = CoursePreview -%>
      <table class="table table-condensed table-hover">
        <thead>
          <tr><td colspan="4"><h3 align = "center">Manage Preview</h3></td></tr>
          <tr>
            <th>Course </th>
            <th>Title</th>
            <th>Description</th>
            <th>Display Order</th>
            <th>Created At</th>

            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @previews.each do |preview| %>
          <tr>
            <td><%= preview.course.title %></td>
            <td><%= preview.name %></td>
            <td><%= preview.desc %></td>
            <td><%= preview.sequence %></td>
            <td><%=l preview.created_at, :format=>'%d %b. %Y %I:%M' %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_course_preview_path(preview), :class => 'btn btn-mini' %>

              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              course_preview_path(preview),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

<div class='apple_pagination' align="center"><%= will_paginate  @previews, :container => false %></div>
