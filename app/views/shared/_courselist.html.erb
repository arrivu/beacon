<div class="container courseclub" >
  <div class="row">
    
    <% @courses.each do |course|%>
    <div class="span7">
      <div class="courses">
                 <article class="course path-100" data-connection="18 20" data-tag="ruby-basics" id="course-6">
          <div class="card-a course-inner">
            <div class="course-progress" data-width="0%" style="width: 0%;"></div>
            <%= image_tag url_for(:controller => 'courses',:action => 'show_image', :id => course.id), width: "130", height: "130",:class=>"course-badge img-circle" %>
           
            <% if price_of_course_according_to_date(course).to_i ==0 %>
                     <div class="free">
          <%= image_tag("free.png") %>
        </div>
        <% end %>
      
            <div class="course-content">
              <em class="label-a label-offset orange" rel="tooltip" data-original-title="Orientation courses are entry-level courses in each of our Paths."> <b><%=course.topic.name.split(' ').map(&:capitalize).join(' ') if !course.topic.nil? %></b></em>
            
              <!-- <em class="label-b">Free Course</em> -->

              <%=link_to(course) do %><h3 class="course-name"><%= course.title.split(' ').map(&:capitalize).join(' ') %></h3>
              <p class="course-desc"><%= course.short_desc  %></p>
              <%end%></div>

            </div>
          </article>
        </div>

      </div>
      <%end%>
      
    </div>
  </div>
  
